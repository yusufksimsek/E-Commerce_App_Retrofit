<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutOrdered"
    android:background="@color/purple_ordered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Ordered" >

    <ImageView
        android:id="@+id/preparing_icon"
        android:layout_width="186dp"
        android:layout_height="203dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/card_preparing_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_preparing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Your order is Preparing"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preparing_icon" />

    <Button
        android:id="@+id/returnHome"
        android:layout_width="243dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="@color/purple_700"
        android:text="Return Home"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_preparing" />
</androidx.constraintlayout.widget.ConstraintLayout>